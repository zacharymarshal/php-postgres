{
    "name": "zacharyrankin/php-postgres",
    "description": "php-postgres is a pure php postgres client, designed to help developers understand what is happening when they send a query to Postgres.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Zachary Rankin",
            "email": "rankin.zachary@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Postgres\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Postgres\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.0"
    },
    "require-dev": {
        "symfony/console": "~3.1",
        "phpmd/phpmd": "^2.6",
        "phpunit/phpunit": "~5.5"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "lint": "vendor/bin/phpmd src/ text phpmd-ruleset.xml"
    }
}
